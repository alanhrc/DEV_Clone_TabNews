{
  "extends": "@rocketseat/eslint-config/react",
  "rules": {
    "no-console": ["warn", { "allow": ["error"] }],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": true,
        "endOfLine": "auto"
      }
    ]
  }
}
